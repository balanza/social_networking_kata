{
  "name": "social-networking-kata",
  "version": "1.0.0",
  "description": "A console-based social networking application (similar to Twitter)",
  "main": "main.js",
  "scripts": {
    "test": "node node_modules/jest/bin/jest.js  \"src/.*\\.test.*$\"",
    "build": "./node_modules/typescript/bin/tsc",
    "start": "node dist/main.js"
  },
  "author": "Emanuele De Cupis",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/mongodb": "^3.1.4",
    "config": "^2.0.1",
    "joi": "^13.6.0",
    "lodash": "^4.17.10",
    "lodash-query": "^1.4.2",
    "moment": "^2.22.2",
    "mongo-mock": "^3.3.2",
    "mongodb": "^3.1.4"
  }
}
